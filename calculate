#include <stdio.h>

int main(void) {
	int num1;
  int num2;
  char cal;
  
  printf ("Please choose your operator (+, -, *, / : ");
  scanf ("%c",&cal);
  
  printf ("Please enter two numbers");
  scanf ("%d %d",&num1,&num2);
  
  switch(cal){
  case '+' : 
          printf("%d + %d = %d",num1,num2,num1 + num2);
          break;
          
  case '-' :
          printf("%d - %d = %d",num1,num2,num1 - num2);
          break;
  
  case '*' :
          printf("%d * %d = %d",num1,num2,num1 * num2);
          break;
  
  case '/' : 
         printf("%d / %d = %d",num1,num2,num1 / num2);
         break;
  
  default :
        printf("Please enter your number");
  }
	return 0;
}
